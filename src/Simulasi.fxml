<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox xmlns:fx="http://javafx.com/fxml" fx:controller="SimulasiController" spacing="15" alignment="CENTER" 
    style="-fx-padding: 20; -fx-background-color: #f9f9f9;">

    <Label text="Simulasi Parkir" style="-fx-font-size: 18px; -fx-font-weight: bold;" />

    <GridPane alignment="CENTER" hgap="10" vgap="10">
        <Label text="Pilih Jenis Kendaraan:" GridPane.columnIndex="0" GridPane.rowIndex="0"/>
        <ComboBox fx:id="cmbJenisKendaraan" GridPane.columnIndex="1" GridPane.rowIndex="0"/>

        <Label text="Plat Nomor Kendaraan:" GridPane.columnIndex="0" GridPane.rowIndex="1"/>
        <TextField fx:id="txtPlatNomor" promptText="Masukkan Plat Nomor" GridPane.columnIndex="1" GridPane.rowIndex="1"/>

        <Button text="Parkir Masuk" onAction="#handleParkirMasuk" GridPane.columnIndex="0" GridPane.rowIndex="2"/>
        <Button text="Parkir Keluar" onAction="#handleParkirKeluar" GridPane.columnIndex="1" GridPane.rowIndex="2"/>

        <Button text="Kembali ke Menu Utama" fx:id="btnKembali" GridPane.columnIndex="1" GridPane.rowIndex="3"/>
    </GridPane>
</VBox>